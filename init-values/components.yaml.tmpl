    namespace: csas-monitoring
    appconfig:
      spec:
        syncPolicy:
          automated:
            prune: false
            selfHeal: true
  - name: monitoring
    version: 0.1.0
    type: helm
    namespace: csas-monitoring
    appconfig:
      spec:
        syncPolicy:
          automated:
            prune: false
