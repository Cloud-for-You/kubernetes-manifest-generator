ARGOCD:
  - name: argocd-deployment-sys
    version: v0.8.2
    type: helm
    appconfig:
      spec:
        destination:
          namespace: csas-argocd-sys
        syncPolicy:
          syncOptions:
          - CreateNamespace=true
          automated:
            prune: false
            selfHeal: true
  - name: argocd-deployment-app
    version: v0.8.2
    type: helm
    appconfig:
      spec:
        destination:
          namespace: csas-argocd-app
        syncPolicy:
          syncOptions:
          - CreateNamespace=true
          automated:
            prune: false
            selfHeal: true
CLUSTER_CONFIG:
  - name: cluster-config
    version: v0.1.0
    type: helm
CSAS_OPERATOR:
  - name: csas-project-operator
    version: 1.0.0-rc.17
    type: kustomize
  - name: csas-application-operator
    version: 1.1.0-rc.11
    type: kustomize
