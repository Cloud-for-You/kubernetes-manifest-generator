memory: &memory 128Mi
argons: &argons ARGOCD_NAMESPACE=csas-argocd-app

##########
csas-application-operator:
  patches:
    - apiVersion: apps/v1
      kind: Deployment
      metadata:
        name: controller-manager
      spec:
        template:
          spec:
            containers:
            - name: manager
              .FINAL_RESOURCES:
                limits:
                  memory: *memory
                requests:
                  memory: *memory
            priorityClassName: *priorityClass
            nodeSelector: *nodeSelector
            tolerations: *tolerations
  configMapGenerators:
    - name: controller-manager
      behavior: merge
      literals:
        - *argons
