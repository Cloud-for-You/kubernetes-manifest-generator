memory: &memory 128Mi
cpu: &cpu 100m

##########
csas-application-operator:
  patches:
    - apiVersion: apps/v1
      kind: Deployment
      metadata:
        name: controller-manager
      spec:
        template:
          spec:
            containers:
            - name: manager
              resources:
                limits:
                  memory: *memory
                  cpu: *cpu
                requests:
                  memory: *memory
                  cpu: *cpu
            priorityClassName: openshift-user-critical
            affinity:
              nodeAffinity: *nodeAffinity
            tolerations: *tolerations
  configMapGenerators:
    - name: controller-manager
      behavior: merge
      literals:
        - ARGOCD_NAMESPACE=csas-argocd-app
